<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="443.0" prefWidth="647.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.consultorio.controller.MenuControlUsuariosController">

  <children>
    <AnchorPane prefHeight="455.0" prefWidth="647.0" style="-fx-background-color: #ffffff;" VBox.vgrow="ALWAYS">
      <children>

        <!-- 🏷️ Título -->
        <Label layoutX="32.0" layoutY="28.0" text="Menú control de usuarios" textFill="black">
          <font>
            <Font name="Arial Black" size="20.0" />
          </font>
        </Label>

        <!-- 🔎 Filtro -->
        <Label layoutX="360.0" layoutY="65.0" text="Buscar:" textFill="black" />
        <TextField fx:id="txtFiltro"
                   layoutX="415.0" layoutY="60.0" prefWidth="150.0"
                   promptText="ID, nombre, apellido o edad"
                   style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #eeeeee;" />

        <!-- 🧾 Tabla de usuarios -->
        <TableView fx:id="tablaUsuarios" layoutX="84.0" layoutY="99.0" prefHeight="200.0" prefWidth="479.0"
                   style="-fx-background-color: #cccccc; -fx-background-radius: 7; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.2, 0, 2);">
          <columns>
              <TableColumn fx:id="colId" text="ID" prefWidth="59.3" />
              <TableColumn fx:id="colNombre" text="NOMBRE" prefWidth="91.3" />
              <TableColumn fx:id="colApellido" text="APELLIDO" prefWidth="75.0" />
              <TableColumn fx:id="colEdad" text="EDAD" prefWidth="75.0" />
              <TableColumn fx:id="colCedula" text="CÉDULA" prefWidth="105.0" />
          </columns>

          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
        </TableView>

        <!-- BOTÓN REGISTRAR -->
        <Button fx:id="btnRegistrar"
                layoutX="84.0" layoutY="343.0" prefHeight="44.0" prefWidth="107.0"
                style="-fx-background-color: #5EDBC0; -fx-background-radius: 20; -fx-cursor: hand;"
                text="Registrar"
                onAction="#abrirFormularioRegistro">
          <font>
            <Font name="Arial" size="14.0" />
          </font>
        </Button>

        <!-- BOTÓN EDITAR -->
        <Button fx:id="btnEditar"
                layoutX="201.0" layoutY="343.0" prefHeight="44.0" prefWidth="107.0"
                style="-fx-background-color: #FEC260; -fx-background-radius: 20; -fx-cursor: hand;"
                text="Editar"
                onAction="#editarUsuario">
          <font>
            <Font name="Arial" size="14.0" />
          </font>
        </Button>

        <!-- BOTÓN VOLVER -->
        <Button fx:id="btnVolver"
                layoutX="455.0" layoutY="343.0" prefHeight="44.0" prefWidth="107.0"
                style="-fx-background-color: #e8a2b0; -fx-background-radius: 20; -fx-cursor: hand;"
                text="Volver">
          <font>
            <Font name="Arial" size="14.0" />
          </font>
        </Button>
      </children>
    </AnchorPane>
  </children>
</VBox>