<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.consultorio.controller.ModuloConsultarCitaController"
            prefWidth="800.0" prefHeight="500.0">

    <!-- Encabezado -->
    <top>
        <AnchorPane prefHeight="60.0" style="-fx-background-color: #5EDBC0;">
            <children>
                <Label text="Consultar / Editar Cita" layoutX="270.0" layoutY="8.0">
                    <font>
                        <Font name="Arial Bold" size="28.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>

    <!-- Formulario lateral -->
    <center>
        <VBox spacing="10.0" alignment="TOP_LEFT">
            <padding>
                <Insets top="20.0" right="40.0" bottom="20.0" left="40.0"/>
            </padding>
            <children>
                <Label text="ID">
                    <font><Font size="16"/></font>
                </Label>
                <TextField fx:id="textFieldID" promptText="id" editable="false"/>

                <Label text="Nombre">
                    <font><Font size="16"/></font>
                </Label>
                <TextField fx:id="textFieldNombre" promptText="nombre"/>

                <Label text="Apellido">
                    <font><Font size="16"/></font>
                </Label>
                <TextField fx:id="textFieldApellido" promptText="apellido"/>

                <Label text="Localidad">
                    <font><Font size="16"/></font>
                </Label>
                <TextField fx:id="textFieldLocalidad" promptText="localidad"/>

                <Label text="Teléfono">
                    <font><Font size="16"/></font>
                </Label>
                <TextField fx:id="textFieldTelefono" promptText="teléfono"/>

                <Label text="Fecha de consulta">
                    <font><Font size="16"/></font>
                </Label>
                <DatePicker fx:id="fechaConsulta"/>

                <HBox spacing="15.0">
                    <VBox spacing="5.0">
                        <Label text="Hora">
                            <font><Font size="16"/></font>
                        </Label>
                        <ComboBox fx:id="cbHora" promptText="12" prefWidth="80.0"/>
                    </VBox>
                    <VBox spacing="5.0">
                        <Label text="Minutos">
                            <font><Font size="16"/></font>
                        </Label>
                        <ComboBox fx:id="cbMinutos" promptText="00" prefWidth="80.0"/>
                    </VBox>
                </HBox>
            </children>
        </VBox>
    </center>

    <!-- Botones inferiores -->
    <bottom>
        <HBox spacing="20.0" alignment="CENTER">
            <padding>
                <Insets top="15.0" bottom="15.0"/>
            </padding>
            <children>
                <Button fx:id="btnGuardar" text="Guardar" styleClass="boton-verde" prefWidth="120.0"/>
                <Button fx:id="btnEliminar" text="Eliminar" styleClass="boton-rojo" prefWidth="120.0"/>
                <Button fx:id="btnRegresar" text="Regresar" styleClass="boton-regresar" prefWidth="120.0"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>